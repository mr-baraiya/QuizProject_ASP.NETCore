@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}
@using Microsoft.AspNetCore.Mvc;
@using My_Project_dotNET.Models;

<div class="container mt-4">
    <div class="row">
        <!-- Profile Card -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    <img src="~/assets/img/profile-img.jpg" alt="Profile Picture" class="rounded-circle img-fluid mb-3">
                    <h4 class="card-title">@My_Project_dotNET.model.UserName()</h4>
                    <p class="text-muted">@My_Project_dotNET.model.Email()</p>
                    <a href="#" class="btn btn-primary btn-sm">Edit Profile</a>
                </div>
            </div>
        </div>

        <!-- Profile Details -->
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Profile Information</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>User ID:</th>
                                <td>@My_Project_dotNET.model.UserID()</td>
                            </tr>
                            <tr>
                                <th>User Name:</th>
                                <td>@My_Project_dotNET.model.UserName()</td>
                            </tr>
                            <tr>
                                <th>Email:</th>
                                <td>@My_Project_dotNET.model.Email()</td>
                            </tr>
                            <tr>
                                <th>Mobile:</th>
                                <td>@My_Project_dotNET.model.Mobile()</td>
                            </tr>
                            <tr>
                                <th>Role:</th>
                                <td>User</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Account Actions -->
            <div class="mt-3">
                <a asp-controller="User" asp-action="ChangePassword" class="btn btn-warning">Change Password</a>
                <a asp-controller="User" asp-action="Logout" class="btn btn-danger">Logout</a>
            </div>
        </div>
    </div>
</div>