@{
}

@model DataTable
@using System.Data

<table class="table">
    <thead>
        <tr>
            <th>ProductID</th>
            <th>ProductName</th>
            <th>ProductPrice</th>
            <th>ProductCode</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow row in Model.Rows)
        {
            <tr>
                <td>@row["ProductID"]</td>
                <td>@row["ProductName"]</td>
                <td>@row["ProductPrice"]</td>
                <td>@row["ProductCode"]</td
            </tr>
        }
    </tbody>
</table>
